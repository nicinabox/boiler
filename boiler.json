{
  "name": "boiler",
  "version": "0.1.0",
  "description": "A package manager for unRAID addons",
  "dependencies": {
    "git": "~1.8.4",
    "ruby": ">=1.9.3"
  },

  "ignore": ["install.sh"],
  "prefix": {
    "usr/local/boiler": ["bin", "lib", "Gemfile*"]
  },

  "symlink": {
    "/usr/local/boiler/bin/boiler": "/usr/local/bin/boiler"
  },

  "post_install": {
    "bundle": "bundle install --gemfile=/usr/local/boiler/Gemfile"
  }
}
