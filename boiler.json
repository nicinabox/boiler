{
  "name": "boiler",
  "version": "0.2.2",
  "description": "Plugin packaging and distribution for unRAID",
  "authors": [
    "Nic Aitch <nic@nicinabox.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "glibc": "2.11.1",
    "ncurses": "5.9",
    "libmpc": "0.8.2",
    "libelf": "0.8.13",
    "mpfr": "3.0.1",
    "kernel-headers": "2.6.37.6_smp",
    "gcc": "4.5.2",
    "gcc-g++": "4.5.2",
    "binutils": "2.21.51.0.6",
    "make": "3.82",
    "automake": "1.11.1",
    "openssl": "1.0.1c",
    "infozip": "6.0",
    "libyaml": "0.1.4",
    "zlib": "1.2.6",
    "git": ">=1.7",
    "ruby": ">=1.9.3"
  },

  "ignore": ["install.sh"],
  "prefix": {
  },

  "symlink": {
    "/etc/gemrc": "/root/.gemrc",
    "/usr/local/boiler/bin/boiler": "/usr/local/bin/boiler"
  },

  "post_install": [
    "echo '\nPlease run `source /etc/bundlerc` or reopen your terminal session\n'"
  ]
}
